@model IEnumerable<Category>
@{
    ViewData["Title"] = "List";
}
<div class="container">
     <h1>Category List</h1>
     <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create Category</a>
    <div class="row">
       

        <div class="col">
            
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Action</td>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Name</td>


                            <td>
                                <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                <a class="btn btn-danger" asp-controller="Category" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
            </table>

        </div>


    </div>
</div>