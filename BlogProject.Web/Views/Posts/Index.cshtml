@{
    ViewData["Title"] = "Index";
}

@model List<PostWithCategoryViewModel>
<h1>Posts List</h1>
<a class="btn btn-primary" asp-controller="Posts" asp-action="Save">Create Post</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Image</td>
            <td>Title</td>
            <td>Description</td>
            <td>Body</td>
            <td>Category</td>
            <td>CreatedDate</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Id</td>
                <td><img src="~/img/@item.ImagePath" width="100" /></td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Body</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Posts" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Posts" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
</table>
    </tbody>
